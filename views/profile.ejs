<%- include('partials/navbar') -%>
<div
  class="container text-white d-flex flex-column justify-content-around align-items-center"
>
  <!-- Row 1-->
  <div class="row my-lg-5 my-3 justify-self-start">
    <!-- Col 1 -->
    <div class="col-12">
      <p class="fs-2"><strong>Welcome</strong> <%= user.userName %>!</p>
      <!-- <p><strong>Email</strong>: <%= user.email %></p> -->
    </div>
  </div>
  <!-- Row 2 -->
  <div class="row my-lg-5 my-3">
    <!-- Col 2 -->
    <div class="col d-flex flex-column text-center gap-3 fs-4">
      <div>Get Ready to Crush Your Goals! ðŸ’ªðŸ”¥</div>
      <div>Explore your options:</div>
    </div>
  </div>
  <!-- Row 3 -->
  <div class="row d-flex flex-lg-row flex-column gap-4 w-100 gap-4 my-lg-5 my-3">
    <!-- Box 1 -->
    <div class="col">
      <a
        href="/addPostPage"
        class="card border border-2 rounded-2 p-5 d-flex justify-content-center align-items-center flex-column gap-4 shadow-lg text-decoration-none"
        style="background-color: #14213d"
      >
        <!-- Icon -->
        <i class="fa-regular fa-pen-to-square fa-3x"></i>
        <!-- Text -->
        <div>Add a post</div>
      </a>
    </div>
    <!-- Box 2 -->
    <div class="col">
      <a
        href="/workoutsPage"
        class="card border border-2 rounded-2 p-5 d-flex justify-content-center align-items-center flex-column gap-4 shadow-lg text-decoration-none"
        style="background-color: #14213d"
      >
        <!-- Icon -->
        <i class="fa-solid fa-dumbbell fa-3x"></i>
        <!-- Text -->
        <div>View your workouts</div>
      </a>
    </div>
    <!-- Box 3 -->
    <div class="col">
      <a
        href="/feed"
        class="col card border border-2 rounded-2 p-5 d-flex justify-content-center align-items-center flex-column gap-4 shadow-lg text-decoration-none"
        style="background-color: #14213d"
      >
        <!-- Icon -->
        <i class="fa-regular fa-comments fa-3x"></i>
        <!-- Text -->
        <div>Go to your feed</div>
      </a>
    </div>
  </div>
  <!-- Row 4 / LOGOUT -->
  <div class="row w-100 my-lg-5 my-3">
    <div class="col d-flex justify-content-center">
      <a href="/logout" class="col-3 btn btn-light">Logout</a>
    </div>
  </div>
</div>

<%- include('partials/footer') -%>

